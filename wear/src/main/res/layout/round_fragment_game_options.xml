<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="it.polimi.aui.auiapp.activities.GameActivity"
    tools:deviceIds="wear_round"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark">

        <android.support.wearable.view.BoxInsetLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="it.polimi.aui.auiapp.activities.GameActivity"
            tools:deviceIds="wear_square"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <LinearLayout style="@style/OptionsContainer"
                          app:layout_box="all">

                <TableLayout
                    android:id="@+id/options_table"
                    style="@style/OptionsTable">
                </TableLayout>

            </LinearLayout>

        </android.support.wearable.view.BoxInsetLayout>

    </LinearLayout>

    <it.polimi.aui.auiapp.views.Circle
        android:id="@+id/timeout"
        style="@style/CircleTimer"/>

</FrameLayout>
