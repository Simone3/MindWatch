<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- PROGRESS BARS -->
    <style name="ProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:progressBackgroundTint">@color/colorPrimaryLight</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/progress_bar_padding</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">2</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="ProgressBarLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/progress_bar_height</item>
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">center</item>
    </style>
</resources>