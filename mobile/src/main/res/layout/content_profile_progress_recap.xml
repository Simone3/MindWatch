<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        style="@style/RecapSingle"
        android:layout_weight="1"
        android:text="@string/today"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/RecapTitle"
            android:text="@string/progress_today_shown"/>

        <TextView
            style="@style/RecapValue"
            android:id="@+id/today_shown"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/RecapTitle"
            android:text="@string/progress_today_solved"/>

        <TextView
            style="@style/RecapValue"
            android:id="@+id/today_solved"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            style="@style/RecapTitle"
            android:text="@string/progress_today_to_go"/>

        <TextView
            style="@style/RecapValue"
            android:id="@+id/today_to_go"/>

    </LinearLayout>



</LinearLayout>